<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="table_b_view_tree" model="ir.ui.view">
        <field name="name">table.b.view.tree</field>
        <field name="model">table.b</field>
        <field name="arch" type="xml">
            <tree string="Table B" editable="bottom">
                <field name="tablea_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>

    <record id="table_b_action" model="ir.actions.act_window">
        <field name="name">Table B</field>
        <field name="res_model">table.b</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="table_b_view_tree"/>
    </record>
    
    <menuitem
        id="table_b_menu"
        name="Table B"
        action="table_b_action"
        parent="table_source_menus"
        sequence="2"/>
</odoo>